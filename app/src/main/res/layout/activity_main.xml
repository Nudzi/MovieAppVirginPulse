<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/floating_hint_firstname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="3"
            app:hintTextAppearance="@style/FloatinIntStyle"
            tools:ignore="MissingClass">

            <com.example.moviesappbootcampv.InstantAutoComplete
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/tvSearch"
                android:inputType="textPersonName"
                android:paddingTop="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/btnShow"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:contentDescription="@string/btnSearch"
            android:onClick="clickBtnShow"
            app:srcCompat="@drawable/img" />

    </LinearLayout>

    <fragment
        android:id="@+id/listFrag"
        android:name="com.example.moviesappbootcampv.ListFrag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        tools:layout="@layout/fragment_list" />

</LinearLayout>